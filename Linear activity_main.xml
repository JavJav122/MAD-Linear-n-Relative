<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:text="Button 1"
        android:id="@+id/firstbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:text="Button 2"
        android:id="@+id/secondbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:text="Button 3"
        android:layout_gravity="right"
        android:id="@+id/thirdbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:text="Button 4"
        android:layout_gravity="right"
        android:id="@+id/fourthbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:text="Button 5"
        android:id="@+id/fifthbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:text="Button 6"
        android:layout_gravity="left"
        android:id="@+id/sixthbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:text="Button 7"
        android:layout_gravity="left"
        android:id="@+id/seventhbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:text="Button 8"
        android:id="@+id/eighthbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:text="Button 9"
            android:layout_margin="1sp"
            android:id="@+id/ninthbtn"
            android:layout_weight="@android:integer/config_longAnimTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:text="Button 10"
            android:layout_margin="1sp"
            android:id="@+id/tenthbtn"
            android:layout_weight="@android:integer/config_longAnimTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:layout_margin="1sp"
            android:text="Button 11"
            android:layout_weight="@android:integer/config_longAnimTime"
            android:id="@+id/eleventhbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:layout_margin="1sp"
            android:text="Button 12"
            android:layout_weight="@android:integer/config_longAnimTime"
            android:id="@+id/twelvebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
